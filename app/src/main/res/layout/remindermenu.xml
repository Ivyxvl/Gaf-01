<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        layout="@layout/homemenu"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="insideInset"
        android:scrollbarSize="0dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backToHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name"
                android:onClick="onClick"
                android:src="@drawable/back"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder Menu"
                android:textColor="@color/gray"
                android:fontFamily="sans-serif-black"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:layout_marginStart="30dp"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date:"

                android:layout_alignParentTop="true"
                android:layout_marginTop="60dp"
                android:textSize="20sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/baloo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                />

            <Button
                android:id="@+id/datePickerButton"
                style="?android:spinnerStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_marginStart="10dp"

                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:background="@color/light_yellow"
                android:fontFamily="@font/baloo"
                android:hint="select reminder's date"
                android:onClick="openDatePicker"
                android:padding="10dp"
                android:text="Jan 01 2023"
                android:textAlignment="textStart"
                android:textColor="@color/black1"
                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time:"


                android:textSize="20sp"
                android:textColor="@color/gray"
                android:layout_alignParentTop="true"
                android:layout_marginTop="160dp"

                android:fontFamily="@font/baloo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                />

            <Button
                android:id="@+id/timeButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/light_yellow"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="20dp"

                android:fontFamily="@font/baloo"
                android:textColorHint="@color/light_gray"
                android:hint="00:00"
                android:onClick="popTimePicker"
                android:textAlignment="textStart"
                android:textColor="@color/black1"

                android:textSize="25dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Puppy's name:"

                android:layout_alignParentTop="true"
                android:layout_marginTop="260dp"

                android:fontFamily="@font/baloo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"

                android:textSize="20sp"
                android:textColor="@color/gray"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/auto_complete_txt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/light_yellow"
                    android:fontFamily="@font/baloo"
                    android:inputType="none"
                    android:text="name"
                    android:textColorHint="@color/light_gray"
                    android:textColor="@color/light_gray"
                    android:textAlignment="textStart"
                    android:textSize="25dp" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do you wanna repeat?"

                android:textSize="20sp"
                android:textColor="@color/gray"
                android:layout_alignParentTop="true"
                android:layout_marginTop="360dp"

                android:fontFamily="@font/baloo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                />

            <RadioGroup
                android:id="@+id/radio_name_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="380dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                >

                <RadioButton
                    android:id="@+id/rb_item_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="daily"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo"
                    android:textSize="22sp"/>

                <RadioButton
                    android:id="@+id/rb_item_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="weekly"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo"
                    android:textSize="22sp"/>

                <RadioButton
                    android:id="@+id/rb_item_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo"
                    android:text="monthly"
                    android:textSize="22sp"/>


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write short message:"
                android:layout_alignParentTop="true"
                android:layout_marginTop="430dp"
                android:fontFamily="@font/baloo"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:textSize="20sp"
                android:textColor="@color/gray"
                />

            <EditText
                android:id="@+id/shortMessage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:inputType="text"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="20dp"
                android:background="@color/light_yellow"
                android:fontFamily="@font/baloo"
                android:paddingLeft="15dp"
                android:textColorHint="@color/light_gray"
                android:onClick="popTimePicker"
                android:textAlignment="textStart"
                android:textColor="@color/black1"
                android:textSize="25dp"
                android:hint="for exp: visit to doc"/>

            <Button
                android:id="@+id/setButton"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginTop="530dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/baloo"
                android:text="set"
                android:textColor="@color/black1"
                android:textSize="30dp"
                android:translationZ="150dp"
                android:layout_alignParentTop="true"
                android:backgroundTint="@color/light_yellow"
                android:textStyle="bold"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>